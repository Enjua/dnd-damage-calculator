<!DOCTYPE HTML>
<html>
<head>
    <title>DND damage calculator</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
</head>
<body>
<div>Hello</div>
<div id="root">
    <div id="characters">
        {{#data}}
            {{#characters}}
                <div>
                    <div>
                        <b>{{name}}</b>
                        <span>{{hp}}</span>
                    </div>
                    <a href="/delete-char/{{id}}">Delete char</a>
                </div>
                <div>
                    <div class="buff_configurator">
                        <select name="Тип" id="buff_type">
                            <option value="buff">Buff</option>
                            <option value="debuff">Debuff</option>
                        </select>

                        <form method="post" action="/create-effect/{{id}}">
                            <input type="text" name="name" placeholder="Input name">
                            <input type="text" name="description" placeholder="Input description">
                            <input type="number" name="duration" placeholder="Input duration">
                            <input type="number" name="hpPerTurn" placeholder="Input damage per turn">
                            <button type="submit">Add effect</button>
                        </form>
                    </div>
                    <div class="moment_damage">
                        <form method="post" action="/deal-damage/{{id}}">
                            <input type="number" name="damage" placeholder="Input damage"/>
                            <button type="submit">Deal damage</button>
                        </form>
                    </div>
                    <div class="buff-list">
                        {{#effects}}
                            <div>
                                <b>{{name}}</b>
                                <span>{{description}}</span>
                                <span>{{duration}}</span>
                                <span>{{hpPerTurn}}</span>
                            </div>
                            <a href="/delete-effect/{{id}}">Delete effect</a>
                        {{/effects}}
                    </div>
                </div>
            {{/characters}}
        {{/data}}
        <a href="/">Start</a>
        <a href="/clear-all">Clear all data</a>
    </div>
    <div>
        <form method="post" action="/new-char">
            <input type="text" name="name" placeholder="Input Name"/>
            <input type="number" name="hp" placeholder="Input HP">
            <button type="submit">Add</button>
        </form>
    </div>
</div>

</body>
</html>